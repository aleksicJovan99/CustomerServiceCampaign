<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="internalLogFile" xsi:type="File" 
            fileName="/Users/jovan/Documents/c#/CustomerServiceCampaign/logs/${shortdate}_logfile.txt" 
            layout="${longdate} ${level:uppercase=true} ${message}"/>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="internalLogFile"/>
  </rules>
</nlog>
